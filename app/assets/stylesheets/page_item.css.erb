.page-item {
	margin: 10px;
}

.page-link {
	margin: auto auto;
	width: 154px;
	height: 26px;
	background: #518DCA;
	border-radius: 4px;
	color: white;
	padding-left: 17px;
	padding-top: 8px;
}

.page-new {
	margin: auto auto;
	width: 152px;
	height: 30px;
	border-radius: 4px;
	border: 2px solid #4F657B;
	padding-left: 15px;
}

.page-input {
	border: none;
	background: none;
	margin-top: 7px;
	width: 110px;
	color: white;
}

.page-input-edit {
	border: none;
	background: none;
	width: 110px;
	color: white;
}

.page-add {
	float: right;
	margin-top: 5px;
	margin-right: 5px;
	width: 20px;
	height: 20px;
	border: none;
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -10px -10px;
}

.page-add:hover {
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -10px -29px;
}

.page-delete {
	visibility: hidden;
	margin-right: 5px;
	margin-top: -3px;
	float: right;
	width: 20px;
	height: 20px;
	border: none;
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -50px -10px;
}

.page-edit {
	visibility: hidden;
	margin-right: 5px;
	margin-top: -3px;
	float: right;
	width: 20px;
	height: 20px;
	border: none;
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -30px -10px;
}

.page-link:hover > .page-delete {
	visibility: visible;
}

.red {
	background: #D86A65;
}

.page-delete:hover {
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -50px -29px;
}

.page-link:hover > .page-edit {
	visibility: visible;
}

.page-edit:hover {
	background: url(<%= asset_path('Add-Delete-Edit-Icons.png') %>) -30px -29px;
}